<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.ProfileActivity">

    <ImageView
        android:id="@+id/view_image_profile"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/view_name_text"
        tools:ignore="VectorDrawableCompat"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="200dp" />

    <TextView
        android:id="@+id/view_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="45dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="44sp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/view_button_picture_camera"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/view_image_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:src="@drawable/ic_photo_camera_black_24dp"></androidx.appcompat.widget.AppCompatImageButton>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/view_button_gallery"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/view_button_picture_camera"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:src="@drawable/ic_photo_library_black_24dp"></androidx.appcompat.widget.AppCompatImageButton>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/view_button_uplaod"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/view_button_gallery"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:src="@drawable/ic_file_upload_black_24dp"></androidx.appcompat.widget.AppCompatImageButton>

</RelativeLayout>